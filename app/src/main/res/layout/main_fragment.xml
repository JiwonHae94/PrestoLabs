<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.jiwon.prestolabs.viewmodel.InstrumentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/symbols_title"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textColor="@android:color/darker_gray"
            android:text="Symbols : "
            android:gravity="center_vertical|left"
            android:singleLine="true"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintLeft_toLeftOf="@id/instrument_list"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/price_change_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:gravity="center_vertical|right"
            android:text="Price / Change : "
            android:singleLine="true"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintLeft_toRightOf="@id/symbols_title"
            app:layout_constraintTop_toTopOf="@id/symbols_title"
            app:layout_constraintBottom_toBottomOf="@id/symbols_title"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:textColor="@android:color/darker_gray"
            android:text="Volume : "
            android:singleLine="true"
            app:layout_constraintLeft_toRightOf="@id/price_change_title"
            app:layout_constraintRight_toRightOf="@id/instrument_list"
            app:layout_constraintTop_toTopOf="@id/symbols_title"
            app:layout_constraintBottom_toBottomOf="@id/symbols_title"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/instrument_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintTop_toBottomOf="@id/symbols_title"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>